<Window x:Class="WpfApp1.CarLineBack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Height="1080" Width="1920" Top="0" Left="0"
        Foreground="{x:Null}" Background="{x:Null}" Loaded="Window_Loaded"
        Title="CarLineBack">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>


        <Grid x:Name="canvas1" />
        <StackPanel VerticalAlignment="Center" Margin="10" Grid.Row="1">
            <Slider x:Name="direction" Minimum="-100" Maximum="100" TickFrequency="1" TickPlacement="BottomRight"/>
        </StackPanel>
    </Grid>
</Window>
