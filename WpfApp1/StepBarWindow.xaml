<Window x:Class="WpfApp1.StepBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:CustomStepBar="clr-namespace:WpfApp1.StepBarControl"
        mc:Ignorable="d"
        Title="StepBarWindow" Height="550" Width="900">
    <Grid>
        <!--https://www.cnblogs.com/zhidanfeng/p/6648327.html-->
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="text" Text="{Binding ., StringFormat=当前正在进行 {0} 步}" Foreground="#957180" FontSize="14" Margin="0,0,0,20" />

            <CustomStepBar:StepBar x:Name="stepBar1" Width="900" Margin="0,0,0,0" Height="260"/>

            <StackPanel Orientation="Horizontal">
                <Button Width="70" Height="28" Click="FlatButton_Click1" Content="Previous" Margin="10,20" />
                <Button Width="70" Height="28" Click="FlatButton_Click" Content="Next" Margin="10,10" />
                <Button Width="70" Height="28" Click="btn_AddItem" Content="Add" Margin="10,10" />
                <Button Width="70" Height="28" Click="btn_RemoveItem" Content="Remove" Margin="10,10" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
